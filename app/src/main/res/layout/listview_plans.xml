<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/root_plan_list_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="22"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/planstimingrating"
                android:layout_height="wrap_content"
                android:src="@mipmap/rating_green"/>
            <TextView
                android:id="@+id/timingratetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="6.3"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="22"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/plansostadrating"
                android:layout_height="wrap_content"
                android:src="@mipmap/rating_green"/>
            <TextView
                android:id="@+id/ostadratingtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="6.3"/>
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="24"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ostads"
            android:textAlignment="center"
            style="@style/TextViewColor"
            android:textSize="20sp"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="16"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="22"
            android:id="@+id/plansvahed"
            android:textAlignment="center"
            style="@style/TextViewColor"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="16"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:id="@+id/plansradif"
            style="@style/TextViewColor"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:background="#808080"
            android:orientation="horizontal"/>
    </LinearLayout>

</LinearLayout>